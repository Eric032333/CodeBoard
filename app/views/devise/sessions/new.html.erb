<div id="main">
  <% content_for :devise_form do %>

    <div class="devise-form">

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="flex m-auto text-xl font-bold mt-6 mb-12">
          <p class="text-center w-full"> { CodeBoard } </p>
        </div>

        <div class="mb-6 flex relative mt-6">
          <span class="item-icon"><i class="fa fa-envelope"></i></span>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input", placeholder: "E-mail" %>
        </div>

        <div class="mb-6 flex relative">
          <span class="item-icon"><i class="fa fa-lock"></i></span>
          <%= f.password_field :password, autocomplete: "current-password", class: "input", placeholder: "密碼" %>
        </div>

        <div class="mb-6 flex items-center justify-between">
          <div class="flex items-center">
            <% if devise_mapping.rememberable? -%>
              <%= f.check_box :remember_me, class:"leading-tight h-4 w-4 text-blue-600 transition duration-150 ease-in-out" %>
              <%= f.label :remember_me, class:"ml-2 font-medium text-gray-500 hover:text-gray-700 focus:outline-none focus:underline transition ease-in-out duration-150" %>
            <% end -%>
          </div>
          <div class="text-sm leading-5">
            <%= link_to "忘記密碼", new_password_path(resource_name), class: "font-medium text-gray-500 hover:text-gray-700 focus:outline-none focus:underline transition ease-in-out duration-150" %>
          </div>
        </div>
        <div class="mb-6">
          <%= f.submit "登入", class: "btn btn-default block w-full rounded-md shadow-sm" %>
        </div>

        <div class="mb-6">
          <div class="relative">
            <div class="absolute inset-0 flex items-center">
              <div class="w-full border-t border-gray-300"></div>
            </div>
            <div class="relative flex justify-center text-sm leading-5">
              <span class="px-2 bg-white text-gray-500">
                連結帳戶
              </span>
            </div>
          </div>
        </div>
        <div class="mb-6 grid grid-cols-2 gap-2">
          <div>
            <span class="w-full inline-flex rounded-md shadow-sm">
              <a class="w-full inline-flex justify-center py-2 px-4 border border-gray-300 rounded-md rounded-lg  bg-white text-sm leading-5 font-medium focus:outline-none focus:border-blue-300 focus:shadow-outline-blue transition  duration-150 ease-in-out hover:bg-gray-100" href="/users/auth/github">
                <%= render_svg 'icons/github' , styles: "fill-current w-8 h-8"%>
              </a>
            </span>
          </div>
          <div>
            <span class="w-full inline-flex rounded-md shadow-sm">
              <a class="w-full inline-flex justify-center py-2 px-4 border border-gray-300 rounded-lg bg-white text-sm leading-5 font-medium text-gray-500 hover:text-gray-400 focus:outline-none focus:border-blue-300 focus:shadow-outline-blue transition duration-150 ease-in-out hover:bg-gray-100" href="/users/auth/google_oauth2">
                <%= render_svg 'icons/google' , styles: "fill-current w-8 h-8 mr-2"%>
              </a>
            </span>
          </div>
        </div>
      <% end %>
    <div>
  <% end %>
</div>

<%= render "devise/shared/form_wrap" %>
