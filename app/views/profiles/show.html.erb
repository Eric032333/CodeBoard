                  <%= board.language %>
                </span>
                <dt class="flex justify-start my-4 text-xl leading-5 font-medium text-indigo-800 font-bold truncate">
                  <%= board.title %>
                </dt>
                <hr>
                <p class="my-4 text-gray-500"><%= board.description %></p>
                <hr>
                <dd class="flex justify-between items-center mt-5">
                  <div class="flex">
                    <span class="inline-block h-6 w-6 rounded-full overflow-hidden bg-gray-100">
                      <svg class="h-full w-full text-gray-500" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M24 20.993V24H0v-2.996A14.977 14.977 0 0112.004 15c4.904 0 9.26 2.354 11.996 5.993zM16.002 8.999a4 4 0 11-8 0 4 4 0 018 0z" />
                      </svg>
                    </span>
                    <div class="text-xl leading-8 font-semibold text-gray-900">
                      <p class="flex items-baseline text-sm">
                        <%= email_account(board.user) %>
                      </p>
                    </div>
                  </div>
                  <div class="flex items-baseline">
                    <div class="text-sm leading-5 font-semibold text-indigo-600">
                      <%= board.cards.count%>é¡Œ
                    </div>
                  </div>
                </dd>
              </dl>
            </div>
          <% end %>
        <% end %>
      </div>
      <hr>
    </div>
  </div>
</div>

<script>
  $('#language').on('change', function(){
    $('#board_search').submit()
  })
</script>
