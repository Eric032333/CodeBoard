<div class="container max-w-full my-12 mx-auto px-4 md:px-12">
  <div class="flex flex-col">
    <div class="bg-white align-middle block min-w-full shadow overflow-hidden sm:rounded-lg ">
      <%= render "boards/index_tab" %>
      <nav class="bg-white mb-3">
        <div class="max-w-7xl  px-2 sm:px-4 lg:px-8">
        <%= search_form_for @q do |f| %>
          <div class="flex justify-between items-center h-16 ">
            <div class="flex-shrink-0 flex items-center">
              <div class="relative  border-none">
                <select class="bg-white text-indigo-500 appearance-none border inline-block py-3 pl-3 pr-8 rounded leading-tight w-full">
                    <option>Tags</option>
                </select>
                <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2">
                  <%= render_svg 'icons/chevron-down' %>
                </div>      
              </div>
            </div>           
            <div class="flex-shrink-0 flex items-center">
              <div class="relative  border-none">
                <%= f.select :level_cont,
                  [["難度", ""], ["簡單", "簡單"], ["中等", "中等"], ["困難", "困難"]], 
                  {}, 
                  {
                    class: 'bg-white text-indigo-500 appearance-none border inline-block py-3 pl-3 pr-8 rounded leading-tight w-full text-sm',
                    id: "level"
                  }
                %>
                <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2">
                  <%= render_svg 'icons/chevron-down' %>
                </div>      
              </div>
            </div>
            <div class="text-sm sm:block  lg:flex-shrink-0 flex justify-end rounded-lg">         
              <div class="pt-2 relative mx-auto text-gray-600">
                <%= f.search_field :title_cont, class: "border-2 border-gray-300 bg-white h-10 px-5 pr-16 rounded-lg text-sm focus:outline-none" ,placeholder: "搜尋 ..."%>
                <button type="submit" class="absolute right-0 top-0 mt-5 mr-4">
                  <%= render_svg 'icons/search'%>
                </button>
              </div> 
            </div>
          </div>
          <% end %>
        </div>
      </nav>
      <hr>
      <div class="flex flex-col">
        <div class="-my-2 py-2 overflow-x-auto sm:-mx-6 sm:px-6 lg:-mx-8 lg:px-8">
          <div class="align-middle inline-block min-w-full shadow overflow-hidden sm:rounded-lg border-b border-gray-200">
            <table class="min-w-full">
              <tbody class="bg-white">
                <% order = 1 %> 
                <% @cards.each do |card|%>
                <tr>
                  <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200">
                    <div class="flex items-center">
                      <div class="flex items-center justify-between h-10 w-10 ">
                        <p class="text-3xl text-center align-center text-gray-500">
                          <% params[:page] = 1 if params[:page].nil? %>
                          <%= order + ((params[:page].to_i - 1) * 6)%>
                        </p>
                      </div>
                      <div class="ml-4 flex-wrap justify-center">
                        <div class="flex justify-between items-center">
                          <div class="text-sm leading-5 font-medium text-gray-900">
                              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium leading-4 bg-orange-100 text-orange-800">
                                <%= card.level %>
                              </span>
                          </div>
                        </div>
                        <div class="text-2xl w-full leading-5 text-black">
                          <%= card.title %>
                        </div>
                      </div>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200">
                    <div class="text-sm leading-5 text-gray-900">
                      <% if card.tags %>
                        <%  card.tags.each do |tag| %>
                          <span class="inline-flex items-center px-3 py-0.5 rounded-full text-sm font-medium leading-5 bg-blue-100 text-blue-800">
                            <%= tag %>
                          </span>    
                        <% end %>
                      <% end %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200">
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200 text-sm leading-5 text-gray-500">    
                  </td>
                  <td class="px-6 py-4 whitespace-no-wrap text-right border-b border-gray-200 text-sm leading-5 font-medium">
                    <span class="w-full inline-flex">
                      <span class="inline-flex items-center px-3 py-2 border border-gray-300 text-sm leading-4 font-medium rounded bg-indigo-600 text-white hover:bg-indigi-500 focus:outline-none focus:border-indigo-700 focus:shadow-outline-indigo active:bg-indigo-700 transition ease-in-out duration-150">
                        <%= link_to 'Answer', board_card_path(board_id: card.board.id,id: card.id), class: "flex justify-center items-center mr-2 " %>
                        <%= render_svg 'icons/edit' , styles: "fill-current w-3 h-3"%>
                      </span>
                    </span>
                  </td>
                </tr>
                <% order = order + 1 %>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <nav class="bg-gray-100 px-4 py-3 flex items-center justify-between sm:px-6 sm:justify-end">
        <div class="flex-1 flex justify-between sm:justify-end">
          <%= link_to_prev_page @cards, '上一頁', class: 'relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm leading-5 font-medium rounded-md text-gray-700 bg-white hover:text-gray-500 focus:outline-none focus:shadow-outline-purple focus:border-purple-300 active:bg-gray-100 active:text-gray-700 transition ease-in-out duration-150' %>
          <%= link_to_next_page @cards, '下一頁', class: 'relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm leading-5 font-medium rounded-md text-gray-700 bg-white hover:text-gray-500 focus:outline-none focus:shadow-outline-purple focus:border-purple-300 active:bg-gray-100 active:text-gray-700 transition ease-in-out duration-150' %>
        </div>
      </nav>
    </div>
  </div>
</div>

<script>
  $('#level').on('change', function(){
    $('#card_search').submit()
  })
</script>

