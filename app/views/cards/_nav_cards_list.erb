<div class="part-board border-b py-3"> 
  <p class="text-xl text-gray-900"><%=@board.title%></p>
  <!--ToDo:Board.username-->
  <p class="text-s text-gray-600"><%=@board.description%></p>
  <p class="text-xs text-gray-600"><i class="fa fa-user"></i> <%=@board.user.email%></p>
  <!--emailæ”¹username-->
</div>
<div class="part-carts-list">
  <div class="">
    <% order = 0 %>
    <% @board.cards.reverse_each do |card| %>
      <% order = order + 1 %>
      <section class="flex w-100">
       
        <%= link_to(board_card_path(@board.id, card.id), :class => 'border-b block w-full text-blue-700 hover:text-blue-500 hover:bg-gray-200 py-4 px-3') do %>
          <span class="w-12 border-r pr-2 mr-1 text-blue-500 text-center"><%= order %></span>
          <%= card.title %>
          <i class="fa fa-chevron-right text-blue-700 hover:text-blue-500 hover:bg-gray-200"></i> 
        <% end %>
    
        <%= link_to(edit_board_card_path(@board.id, card.id), :class => 'w-2 text-orange-500 hover:text-orange-700 text-white py-1 px-2 rounded mr-1') do %>
          <i class="fa fa-pencil-square"></i>  <!--edit btn-->
        <% end %>

        <%= link_to(board_card_path(@board.id, card.id), method: 'delete', :class => 'w-2 text-red-500 hover:text-red-700 text-white py-1 px-2 rounded mr-1') do %>
          <i class="fa fa-times-circle"></i>  <!--deleted btn-->
        <% end %>
    </section>
      
    <% end %>
  </div>
</div>