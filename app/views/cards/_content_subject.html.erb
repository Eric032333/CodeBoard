<div class="mg-0 pb-4">
  <h1 class="font-semibold text-4xl text-gray-700">
    <span class="mr-3 -m-10"><%= @card.order %></span><span class="text-3xl mb-3 font-semibold"><%= @card.title %></span>
  </h1>

  <p class="mt-6 -ml-16 -mb-12">
      <span class="mr-4 bg-transparent text-blue-700 font-semibold py-1 px-2 border border-blue-500 rounded">
        <%= @card.level %>
      </span>
  </p>
  <section id="card-description" class="lead text-l text-gray-700 mb-4">
    <%= @card.description %>
  </section>
  <p class="my-2">
    <% @card.tags&.each do |tag| %>
        <span class="inline-block bg-gray-200 px-3 py-0 text-sm text-gray-700 mr-2">
          <%= tag %>
        </span>    
    <% end %>
  </p>
</div>