 <div id="part-cards-list">

  

  <div class="">

    <section class="w-20">
      <% if user_authority ==  "author" %>
        <%= link_to(new_board_card_path(@board.id), :class => 'w-2 text-blue-500 hover:text-blue-700 text-white py-1 px-2 rounded mr-1') do %>
          <i class="btn-add fa fa-plus-square"></i>
          <span class="">題目</span>
        <% end %>
      <% end %>
    </section>

    <% @board.cards.reverse_each do |card| %>
      
      <section class="one-card flex w-100 relative">
        <% if card.id %>
          <%= link_to(board_card_path(@board.id, card.id), :class => "#{'active' if card.id == nowCard} flex border-b block w-full text-blue-700 hover:text-blue-500 hover:bg-gray-200 py-4 py-3") do %>
            <span class="w-8 inline-block font-semibold border-r  mr-2 text-blue-500 text-center"><%= card.order %></span>
            <span class="inline-block flex-grow"><%= card.title %></span>
            <span class="inline-block w-4 px-1 mx-2"><i class="fa fa-chevron-right text-blue-700 hover:text-blue-500 hover:bg-gray-200"></i> </span>
          <% end %>
          <% if @board.user == current_user %>   <!--controller更新時更換成實體變數-->
            <div class="part-btns hover absolute my-4">
              <%= link_to(edit_board_card_path(@board.id, card.id), 
                          :class => 'w-2 text-orange-500 hover:text-orange-700 text-white py-1 rounded mr-1') do %>
                <i class="btn-edit fa fa-pencil-square"></i>
              <% end %>
              <%= link_to(board_card_path(@board.id, card.id), method: 'delete', 
                          :class => 'w-2 text-red-500 hover:text-red-700 text-white py-1 rounded mr-1') do %>
                <i class="btn-del fa fa-window-close"></i>
              <% end %>
            </div>
          <% end %>
        <% end %>


    </section>
      
    <% end %>
  </div>
</div>