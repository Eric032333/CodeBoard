<h1 class="text-gray-900 font-bold text-xl border-b">Card</h1>
<%= form_with model: @card, url: board_cards_path , local: true do |f| %>

  <div>
    <%= f.label :title, '名稱'%>
    <%= f.text_field :title %>
  </div>
  
  <div>
    <%= f.label :description, '題目敘述' %>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.label :default_code, '預設程式碼' %>
    <%= f.text_area :default_code %>
    <div id="editorRubyDefult" class="editor"></div>
  </div>

  <div>
    <%= f.label :test_code, '測試資料' %>
    <%= f.text_area :test_code %>
  </div>

  <div>
    印出結果：<%= @result %>
  </div>
  
  <div>
    <%= f.label :level, '難易度' %>
    <%= f.text_field :level %>
  </div>

  <div>
    <%= f.label :tags, '標籤' %>
    <%= f.text_field :tags %>
  </div>

  <div>
    <%= f.label :order, '題序' %>
    <%= f.text_field :order %>
  </div>
  
  <%= f.submit '送出' %>
  
  <% end %>

