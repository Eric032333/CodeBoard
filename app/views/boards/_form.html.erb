<%= form_with model: @board, local: true do |f| %>
  <% if @board.errors.any? %>
    <ul>
      <% @board.errors.full_messages.each do |message| %>
        <li class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert"><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <div id="board" class="w-3/6 m-auto">
    <h1 class="text-gray-900 font-bold text-xl border-b text-right py-4 my-2">
         <% case action_name%>
        <% when "new"%>
          <%="新建Board"%>
        <% when "edit"%>
          <%="編輯Board"%>
      <% end %>
    </h1>
    <div class="flex my-6">
      <%= f.label :language, '語言',class: 'w-20 text-m mb-2 text-gray-600' %>
      <%= f.select :language, [['Ruby','Ruby'],['JavaScript','JavaScript'],['Python','Python']],{}, 
                    class: 'shadow appearance-none border rounded w-auto py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline',
                    style: 'text-align-last: center;'%>
    </div>

    <div class="flex my-6">
      <%= f.label :title, '名稱', class: 'w-20 text-m mb-2 text-gray-600'%>
      <%= f.text_field :title, class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'%>
    </div>

    <div class="flex my-6">
      <%= f.label :description, '簡介', class: 'w-20 text-m mb-2 text-gray-600' %>
      <%= f.text_area :description, class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
    </div>
    
    <div class="flex my-6">
      <%= f.submit '送出', class: 'm-auto bg-blue-500 hover:bg-blue-400 text-white font-bold py-2 px-4 border-b-4 border-blue-700 hover:border-blue-500 rounded'  %>
    <div>
    
  </div>
  <% end %>