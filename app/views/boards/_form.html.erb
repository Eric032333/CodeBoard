<%= form_with model: @board, local: true do |f| %>

  <% if @board.errors.any? %>
    <ul>
      <% @board.errors.full_messages.each do |message| %>
        <li class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
          <%= message %>
        </li>
      <% end %>
    </ul>
  <% end %>

  <div id="board" class="bg-white w-4/5 xl:w-1/3 m-auto shadow rounded-lg border mt-10">

    <div id="board-head" class="border-b">
      <h1 class="border-gray-800 text-gray-700 font-bold text-xl text-center py-4">
        <% case action_name%>
          <% when "new"%>
            <%="新建題組"%>
          <% when "edit"%>
            <%="編輯題組"%>
        <% end %>
      </h1>
    </div>

    <div id="board-body" class="p-10">
      <div class="flex my-6">
        <%= f.label :language, '語言',class: 'w-1/4 text-center self-center pr-6 text-m mb-2 text-gray-600' %>
        <%= f.select :language, [['Ruby','Ruby'],['JavaScript','JavaScript'],['Python','Python']],{}, 
                      class: 'w-3/5 shadow border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline',
                      style: 'text-align-last: center; width: 100%'%>
      </div>

      <div class="flex my-6">
        <%= f.label :title, '名稱', class: 'w-1/4 text-center self-center pr-6 text-m mb-2 text-gray-600'%>
        <%= f.text_field :title, class: 'w-3/5 shadow border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'%>
      </div>

      <div class="flex my-6">
        <%= f.label :description, '簡介', class: 'w-1/4 text-center pr-6 text-m mb-2 text-gray-600' %>
        <%= f.text_area :description, class: 'h-16 w-3/5 shadow border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
      </div>
    </div>

    <div id="board-foot">
      <div class="flex my-6 pt-5 border-t">
        <%= f.submit '送出', class: 'w-1/3 m-auto bg-purple-500 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded'  %>
      <div>
    </div>

  </div>
<% end %>